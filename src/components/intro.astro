---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";


const winners = [
  {
    title: "WINER NAME",
    description:
      "Logró el primer puesto en la categoría...",
    icon: "ant-design:trophy-outlined",
  },
  {
    title: "WINER NAME",
    description:
      "Logró el primer puesto en la categoría...",
    icon: "ant-design:trophy-outlined",
  },
  {
    title: "WINER NAME",
    description:
      "Logró el primer puesto en la categoría...",
    icon: "ant-design:trophy-outlined",
  },
];
---

<ContentSection title="Ranking" id="ranking">
  <Icon slot="eyebrow" name="logomark" class="h-32" />
  <Fragment slot="lead">
    Ganadores de la última edición de velocidad en tierra
    en <span class="text-primary">Ciudad de Lascano</span> Rocha
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      winners.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset">
          <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
            <Icon name={icon} />
          </div>
          <p class="text-xl font-extrabold text-center">{title}</p>
          <p class="text-sm text-center text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
